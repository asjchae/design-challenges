doctype 5
html
  head
    title= title
    script(src='http://code.jquery.com/jquery.js')
    link(rel='stylesheet', href='/stylesheets/style.css')

    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') Tup
          .nav-collapse.collapse
            ul.nav
              if (page == 'browser')
                li.active
                  a.bar(href='/challengebrowser') Challenge Browser
              else      
                li
                  a.bar(href='/challengebrowser') Challenge Browser
              if (page == 'team')
                li.active
                  a.bar(href='/teampage') My Team 
              else      
                li
                  a.bar(href='/teampage') My Team 
              if (page == 'add')
                li.active
                  a.bar(href='/addchallenge') Create a Challenge
              else      
                li
                  a.bar(href='/addchallenge') Create a Challenge
              //- if (page == 'challenge')
              //-   li.active
              //-     a.bar #{title}
              if (page != 'login')
                - if (locals.loggedin)
                  if loggedin = 'yes'
                    li
                      a.bar(href='/logout') Log Out
                else
                  li
                    a.bar(href='/logout') Log Out
               
    .container(id='page')
      block content 
      
